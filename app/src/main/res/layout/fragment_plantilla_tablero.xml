<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_icono_color_alimentos"
            android:id="@+id/imageView4" android:layout_weight="1"/>
    <TextView
            android:text="Desayuno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvTitulo" android:layout_weight="1"/>
    <TextView
            android:text="08:00 a.m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvHora" android:layout_weight="1"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/swCompletado" android:layout_weight="1"/>
</LinearLayout>